create table UOM
(
  ID         NUMBER(10) not null,
  CODE       VARCHAR2(16) not null,
  UOM_TYPE   VARCHAR2(16) not null,
  NAME       VARCHAR2(64) not null,
  CREATEDON  DATE not null,
  CREATEDBY  VARCHAR2(16) not null,
  MODIFIEDON DATE not null,
  MODIFIEDBY VARCHAR2(16) not null,
  ACTIVE     CHAR(1) default 'N' not null,
  IS_PERIOD  CHAR(1) default 'N' not null,
  IS_VOLUME  CHAR(1) default 'N' not null,
  IS_MASS    CHAR(1) default 'N' not null
)
;
comment on table UOM
  is 'Units of measure (Code: UOM)';
comment on column UOM.IS_PERIOD
  is 'Is this a period based uom? [ hour,day, month,minute,etc ]';
comment on column UOM.IS_VOLUME
  is 'Is this a volume based unit ? [ liter, gallon,etc]';
comment on column UOM.IS_MASS
  is 'Is this a mass unit ? [ kg,tone, etc]';
alter table UOM
  add constraint PK_UOM primary key (ID);
alter table UOM
  add constraint UK_UOM unique (CODE);

