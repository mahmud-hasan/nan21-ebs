create table COST_CENTER
(
  ID        NUMBER(10) not null,
  CLIENT_ID NUMBER(10) not null,
  CODE      VARCHAR2(16) not null,
  NAME      VARCHAR2(64) not null,
  ACTIVE    CHAR(1) default 'N' not null
)
;
comment on table COST_CENTER
  is 'Cost centers (Code: COSTCENTER)';
alter table COST_CENTER
  add constraint PK_COSTCENTER primary key (ID);
alter table COST_CENTER
  add constraint UK_COSTCENTER unique (CODE);
alter table COST_CENTER
  add constraint FK_COSTCENTER_CLIENT foreign key (CLIENT_ID)
  references CLIENT (ID);

