create table BPARTNER
(
  ID                      NUMBER(10) not null,
  NAME                    VARCHAR2(255) not null,
  BPARTNER_TYPE           VARCHAR2(8),
  BPARTNER_ID             NUMBER(10),
  CODE                    VARCHAR2(32) not null,
  COPIED_FROM_BPARTNER_ID NUMBER(10),
  TAX_NUMBER              VARCHAR2(32),
  TAX_NUMBER_TYPE         VARCHAR2(16),
  CREATEDON               DATE not null,
  CREATEDBY               VARCHAR2(16) not null,
  MODIFIEDON              DATE not null,
  MODIFIEDBY              VARCHAR2(16) not null,
  COMPANY_REG_NR          VARCHAR2(32),
  PHONE                   VARCHAR2(16),
  EMAIL                   VARCHAR2(100),
  FAX                     VARCHAR2(16),
  CLIENT_ID               NUMBER(10) not null,
  CUSTGROUP_CODE          VARCHAR2(16),
  CREDITCLASS_CODE        VARCHAR2(16),
  PAYMETHOD_CODE          VARCHAR2(16),
  PAYTERMCLASS_CODE       VARCHAR2(16),
  MAX_CREDIT_LIMIT        NUMBER,
  MAX_PAYMENT_TERM        NUMBER(4),
  IS_CUSTOMER             CHAR(1) default 'N' not null,
  IS_VENDOR               CHAR(1) default 'N' not null,
  IS_EMPLOYEE             CHAR(1) default 'N' not null,
  IS_ONETIME              CHAR(1) default 'N' not null
)
;
comment on table BPARTNER
  is 'Business partner master data. Business partners can be customers, vendors, or internal stuff/hierarchical units. (Code: BPARTNER)';
comment on column BPARTNER.CUSTGROUP_CODE
  is 'Code of the customer group ';
comment on column BPARTNER.CREDITCLASS_CODE
  is 'Code of the credit class assigned to this account. Credit limit of the selected class is used unless MAX_CREDIT_LIMIT is specified';
comment on column BPARTNER.PAYMETHOD_CODE
  is 'Prefered payment method ';
comment on column BPARTNER.PAYTERMCLASS_CODE
  is 'Code of the payment term assigned to this account. Payment term of the selected class is used unless MAX_PAYMENT_TERM is specified';
comment on column BPARTNER.MAX_CREDIT_LIMIT
  is 'Maximum credit limit. Leave it blank to use the credit limit of the selected CREDITCLASS_CODE';
comment on column BPARTNER.MAX_PAYMENT_TERM
  is 'Maximum payment term in number of days. Leave it blank to use the term of the selected PAYTERMCLASS_CODE. ';
alter table BPARTNER
  add constraint PK_BPARTNER primary key (ID);

