create table ACC_SCHEMA_ATTR
(
  ID             NUMBER(10) not null,
  ACCSCHEMA_ID   NUMBER(10),
  PROPERTY_NAME  VARCHAR2(32),
  PROPERTY_VALUE VARCHAR2(255),
  CREATEDON      DATE,
  CREATEDBY      VARCHAR2(16),
  MODIFIEDON     DATE,
  MODIFIEDBY     VARCHAR2(16)
)
;
comment on table ACC_SCHEMA_ATTR
  is 'Accounting schema properties (Code: ACCSCHEMAATTR)';
alter table ACC_SCHEMA_ATTR
  add constraint PK_ACCSCHEMAATTR primary key (ID);
alter table ACC_SCHEMA_ATTR
  add constraint UK_ACCSCHEMAATTR unique (ACCSCHEMA_ID, PROPERTY_NAME);

