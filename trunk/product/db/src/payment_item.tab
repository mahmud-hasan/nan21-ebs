create table PAYMENT_ITEM
(
  ID            NUMBER(10) not null,
  CLIENT_ID     NUMBER(10) not null,
  PAYMENT_ID    NUMBER(10) not null,
  AMOUNT        NUMBER(22,6) not null,
  CURRENCY      VARCHAR2(4) not null,
  ORIG_AMOUNT   NUMBER(22,6),
  ORIG_CURRENCY VARCHAR2(4),
  DEBIT_CREDIT  CHAR(1) not null,
  NOTES         VARCHAR2(400),
  CREATEDON     DATE not null,
  CREATEDBY     VARCHAR2(16) not null,
  MODIFIEDON    DATE not null,
  MODIFIEDBY    VARCHAR2(16) not null
)
;
comment on table PAYMENT_ITEM
  is 'Payed amounts (Code: PAYITEM)';
comment on column PAYMENT_ITEM.DEBIT_CREDIT
  is 'D=debit/C=credit';
alter table PAYMENT_ITEM
  add constraint PK_PAYITEM primary key (ID);

