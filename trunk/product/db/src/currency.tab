create table CURRENCY
(
  ID           NUMBER(10) not null,
  CODE         VARCHAR2(4) not null,
  NAME         VARCHAR2(64) not null,
  ACTIVE       CHAR(1) not null,
  ACCOUNT_GAIN VARCHAR2(32),
  ACCOUNT_LOSS VARCHAR2(32)
)
;
comment on table CURRENCY
  is 'Available currencies to be used in system (Code: CURRENCY)';
alter table CURRENCY
  add constraint PK_CURRENCY primary key (ID);
alter table CURRENCY
  add constraint UK_CURRENCY unique (CODE);
alter table CURRENCY
  add constraint CK_CURRENCY_ACTIVE
  check (ACTIVE IN ('N','Y'));

