create table ACCOUNTING_JOURNAL
(
  ID           NUMBER(10) not null,
  CLIENT_ID    NUMBER(10) not null,
  NAME         VARCHAR2(64) not null,
  DESCRIPTION  VARCHAR2(255) not null,
  ACCSCHEMA_ID NUMBER(10) not null
)
;
comment on table ACCOUNTING_JOURNAL
  is 'Accounting journals definition (Code: ACCJOURN)';
alter table ACCOUNTING_JOURNAL
  add constraint PK_ACCJOURN primary key (ID);
alter table ACCOUNTING_JOURNAL
  add constraint UK_ACCJOURN unique (CLIENT_ID, ACCSCHEMA_ID, NAME);
alter table ACCOUNTING_JOURNAL
  add constraint FK_ACCJOURN_ACCSCHEMA foreign key (ACCSCHEMA_ID)
  references ACC_SCHEMA (ID);
alter table ACCOUNTING_JOURNAL
  add constraint FK_ACCJOURN_CLIENT foreign key (CLIENT_ID)
  references CLIENT (ID);

