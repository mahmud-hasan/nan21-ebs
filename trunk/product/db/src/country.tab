create table COUNTRY
(
  ID           NUMBER(10) not null,
  CODE         VARCHAR2(16) not null,
  NAME         VARCHAR2(64) not null,
  ACTIVE       CHAR(1) default 'Y' not null,
  WITH_REGIONS CHAR(1) default 'N' not null,
  WITH_CITIES  CHAR(1) default 'N' not null,
  ISO2         VARCHAR2(2)
)
;
comment on table COUNTRY
  is 'Geographical base data definition, countries (Code: COUNTRY)';
comment on column COUNTRY.ID
  is 'Unique system identifier';
comment on column COUNTRY.CODE
  is 'Unique system code';
comment on column COUNTRY.NAME
  is 'Country name';
comment on column COUNTRY.ACTIVE
  is 'Is in use';
comment on column COUNTRY.ISO2
  is 'International 2 letter country code';
alter table COUNTRY
  add constraint PK_COUNTRY primary key (ID);
alter table COUNTRY
  add constraint UK_COUNTRY unique (CODE);
alter table COUNTRY
  add constraint CK_COUNTRY_ACTIVE
  check (ACTIVE IN ('N','Y'));

