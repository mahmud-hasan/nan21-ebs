create table ACCOUNTING_DOC_LINE
(
  ID            NUMBER(10) not null,
  ACCDOC_ID     NUMBER(10) not null,
  CLIENT_ID     NUMBER(10) not null,
  DB_ACCT       VARCHAR2(32),
  CR_ACCT       VARCHAR2(32),
  DB_AMOUNT     NUMBER(22,6) default 0 not null,
  CR_AMOUNT     NUMBER(22,6) default 0 not null,
  CURRENCY      VARCHAR2(4) not null,
  CREATEDON     DATE not null,
  CREATEDBY     VARCHAR2(16) not null,
  MODIFIEDON    DATE not null,
  MODIFIEDBY    VARCHAR2(16) not null,
  NOTES         VARCHAR2(255),
  IS_GENERATED  CHAR(1) default 'N' not null,
  ORIG_AMOUNT   NUMBER(22,6),
  ORIG_CURRENCY VARCHAR2(4),
  XRATE         NUMBER(22,6)
)
;
comment on table ACCOUNTING_DOC_LINE
  is 'Accounting document line. Contains records of accounting document, as operation in credit/debit account pairs (Code: ACCDOCLIN)  ';
alter table ACCOUNTING_DOC_LINE
  add constraint PK_ACCDOCLIN primary key (ID);
alter table ACCOUNTING_DOC_LINE
  add constraint FK_ACCDOCLINM_ACCDOC foreign key (ACCDOC_ID)
  references ACCOUNTING_DOC (ID) on delete cascade;
alter table ACCOUNTING_DOC_LINE
  add constraint FK_ACCDOCLIN_CLIENT foreign key (CLIENT_ID)
  references CLIENT (ID);
create unique index PK_ACCDOCITEM on ACCOUNTING_DOC_LINE (ID);

