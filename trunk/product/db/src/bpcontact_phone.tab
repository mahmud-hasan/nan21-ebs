create table BPCONTACT_PHONE
(
  ID           NUMBER(10) not null,
  BPCONTACT_ID NUMBER(10) not null,
  CMNCT_TYPE   VARCHAR2(16) not null,
  CMNCT_VALUE  VARCHAR2(100) not null,
  NOTES        VARCHAR2(100),
  CREATEDON    DATE default sysdate not null,
  CREATEDBY    VARCHAR2(16) not null,
  MODIFIEDON   DATE default sysdate not null,
  MODIFIEDBY   VARCHAR2(16) not null
)
;
comment on table BPCONTACT_PHONE
  is 'Communication methods with a certain contact (Code: BPCONTACTPH)';
alter table BPCONTACT_PHONE
  add constraint PK_BPCONTACTPH primary key (ID);
alter table BPCONTACT_PHONE
  add constraint FK_BPCONTACTPH_BPCONTACT foreign key (BPCONTACT_ID)
  references BP_CONTACT (ID);

