create table MENUITEM_TRL
(
  ID          NUMBER(10) not null,
  MENUITEM_ID NUMBER(10) not null,
  LANG        VARCHAR2(16) not null,
  TRANSLATION VARCHAR2(255) not null,
  CREATEDON   DATE not null,
  CREATEDBY   VARCHAR2(16) not null,
  MODIFIEDON  DATE not null,
  MODIFIEDBY  VARCHAR2(16) not null
)
;
comment on table MENUITEM_TRL
  is 'Menu item translation (Code: MENUITEMTRL)';
alter table MENUITEM_TRL
  add constraint PK_MENUITEMTRL primary key (ID);
alter table MENUITEM_TRL
  add constraint UK_MENUITEMTRL unique (MENUITEM_ID, LANG);
alter table MENUITEM_TRL
  add constraint FK_MENUITEMTRL_LANG foreign key (LANG)
  references LANGUAGES (CODE);
alter table MENUITEM_TRL
  add constraint FK_MENUITEMTRL_MENUITEM foreign key (MENUITEM_ID)
  references MENUITEM (ID) on delete cascade;

