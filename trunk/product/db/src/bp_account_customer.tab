create table BP_ACCOUNT_CUSTOMER
(
  ID                  NUMBER(10) not null,
  BPARTNER_ID         NUMBER(10) not null,
  CLIENT_ID           NUMBER(10) not null,
  ACCT_RECEIVABLE     VARCHAR2(32),
  ACCT_PREPAYMENT     VARCHAR2(32),
  ACCT_RECEVABLE_SRVC VARCHAR2(16),
  CREATEDON           DATE not null,
  CREATEDBY           VARCHAR2(16) not null,
  MODIFIEDON          DATE not null,
  MODIFIEDBY          VARCHAR2(16) not null,
  ACCSCHEMA_ID        NUMBER(10) not null
)
;
comment on table BP_ACCOUNT_CUSTOMER
  is 'Customer accounts of a business partner (Code: BPACCCUST)';
comment on column BP_ACCOUNT_CUSTOMER.ID
  is 'Unique identifier';
comment on column BP_ACCOUNT_CUSTOMER.BPARTNER_ID
  is 'Business partner unique identifier';
comment on column BP_ACCOUNT_CUSTOMER.CLIENT_ID
  is 'Client business unit unique identifier';
alter table BP_ACCOUNT_CUSTOMER
  add constraint PK_BPACCCUST primary key (ID);
alter table BP_ACCOUNT_CUSTOMER
  add constraint UK_BPACCCUST unique (CLIENT_ID, BPARTNER_ID, ACCSCHEMA_ID);

