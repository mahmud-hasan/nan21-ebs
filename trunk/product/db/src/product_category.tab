create table PRODUCT_CATEGORY
(
  ID           NUMBER(10) not null,
  CODE         VARCHAR2(32) not null,
  NAME         VARCHAR2(128) not null,
  PRODCATEG_ID NUMBER(10),
  DESCRIPTION  VARCHAR2(4000),
  CREATEDON    DATE not null,
  CREATEDBY    VARCHAR2(16) not null,
  MODIFIEDON   DATE not null,
  MODIFIEDBY   VARCHAR2(16) not null,
  CLIENT_ID    NUMBER(10) not null,
  ACTIVE       CHAR(1) not null
)
;
comment on table PRODUCT_CATEGORY
  is 'Product categories (Code: PRODCATEG)';
alter table PRODUCT_CATEGORY
  add constraint PK_PRODCATEG primary key (ID);
alter table PRODUCT_CATEGORY
  add constraint CK_PRODCATEG_ACTIVE
  check (ACTIVE IN ('Y','N'));

