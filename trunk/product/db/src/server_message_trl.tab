create table SERVER_MESSAGE_TRL
(
  ID          NUMBER(10) not null,
  SRVMSG_CODE VARCHAR2(64) not null,
  LANG_CODE   VARCHAR2(16) not null,
  TRANSLATION VARCHAR2(400) not null,
  MODIFIEDON  DATE not null,
  MODIFIEDBY  VARCHAR2(16) not null
)
;
comment on table SERVER_MESSAGE_TRL
  is 'Server message translations (Code: SRVMSGTRL)';
alter table SERVER_MESSAGE_TRL
  add constraint PK_SRVMSGTRL primary key (ID);
alter table SERVER_MESSAGE_TRL
  add constraint UK_SRVMSGTRL unique (SRVMSG_CODE, LANG_CODE);
alter table SERVER_MESSAGE_TRL
  add constraint FK_SRVMSGTRL_LANG foreign key (LANG_CODE)
  references LANGUAGES (CODE);
alter table SERVER_MESSAGE_TRL
  add constraint FK_SRVMSGTRL_SRVMSG foreign key (SRVMSG_CODE)
  references SERVER_MESSAGE (CODE) on delete cascade;

