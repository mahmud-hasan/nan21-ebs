create table PRODUCT_ACCOUNT
(
  ID           NUMBER(10) not null,
  CLIENT_ID    NUMBER(10) not null,
  PRODUCT_ID   NUMBER(10) not null,
  REVENUE_ACCT VARCHAR2(32),
  EXPENSE_ACCT VARCHAR2(32),
  ASSET_ACCT   VARCHAR2(32),
  ACCSCHEMA_ID NUMBER(10) not null,
  CREATEDON    DATE not null,
  CREATEDBY    VARCHAR2(16) not null,
  MODIFIEDON   DATE not null,
  MODIFIEDBY   VARCHAR2(16) not null
)
;
comment on table PRODUCT_ACCOUNT
  is 'Product accounts (Code: PRODACCT)';
alter table PRODUCT_ACCOUNT
  add constraint PK_PRODACCT primary key (ID);
alter table PRODUCT_ACCOUNT
  add constraint UK_PRODACCT unique (CLIENT_ID, ACCSCHEMA_ID, PRODUCT_ID);
alter table PRODUCT_ACCOUNT
  add constraint FK_PRODACCT_ACCSCHEMA foreign key (ACCSCHEMA_ID)
  references ACC_SCHEMA (ID);
alter table PRODUCT_ACCOUNT
  add constraint FK_PRODACCT_CLIENT foreign key (CLIENT_ID)
  references CLIENT (ID);
alter table PRODUCT_ACCOUNT
  add constraint FK_PRODACCT_PROD foreign key (PRODUCT_ID)
  references PRODUCT (ID);
create unique index PK_PRODACC on PRODUCT_ACCOUNT (ID);

