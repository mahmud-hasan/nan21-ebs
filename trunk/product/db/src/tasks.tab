create table TASKS
(
  ID          NUMBER(10) not null,
  TITLE       VARCHAR2(255),
  FINISH_DATE DATE,
  START_DATE  DATE,
  STATUS      VARCHAR2(16),
  ASSIGNED_TO VARCHAR2(16),
  CREATEDON   DATE,
  CREATEDBY   VARCHAR2(16),
  MODIFIEDON  DATE,
  MODIFIEDBY  VARCHAR2(16),
  NOTES       VARCHAR2(4000),
  CLOSED      CHAR(1) default 'N'
)
;
comment on table TASKS
  is 'Tasks (Code: TASK)';
alter table TASKS
  add constraint PK_TASK primary key (ID);
alter table TASKS
  add constraint CHK_TASK_CLOSED
  check (CLOSED IN ('Y','N'));

