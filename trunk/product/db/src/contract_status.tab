create table CONTRACT_STATUS
(
  CODE   VARCHAR2(16) not null,
  NAME   VARCHAR2(64),
  ACTIVE CHAR(1)
)
;
comment on table CONTRACT_STATUS
  is 'Contract statuses (Code: CONTRSTAT)';
alter table CONTRACT_STATUS
  add constraint PK_CONTRSTAT primary key (CODE);
alter table CONTRACT_STATUS
  add constraint CK_CONTRSTAT_ACTIVE
  check (ACTIVE IN ('Y','N'));

